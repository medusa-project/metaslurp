<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %> |
      <%= Option.string(Option::Keys::WEBSITE_NAME) %></title>

    <meta charset="utf-8"/>
    <meta name="copyright" content="<%= Option.string(Option::Keys::COPYRIGHT_STATEMENT) %>"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= csrf_meta_tags %>
    <%= favicon_link_tags %>

    <%= stylesheet_link_tag 'website', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body <%= yield(:body_id).present? ? raw("id=\"#{yield(:body_id)}\"") : nil %>
        <%= raw("data-nav=\"#{yield(:active_nav)}\"") %>>
    <%= render partial: 'layouts/main_menu' %>

    <%= hidden_field_tag('dl-root-path', root_path) %>
    <%= hidden_field_tag('dl-root-url', root_url) %>
    <%= hidden_field_tag('dl-current-path', request.fullpath) %>

    <div class="container-fluid">
      <div id="dl-page-content">
        <%= yield.force_encoding(Encoding::UTF_8) %>
      </div>
    </div>
  </body>
</html>
