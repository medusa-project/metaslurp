<% @pagination_links = paginate(@count, @limit, @current_page, @permitted_params) %>

<div class="card" id="dl-search-status">
  <div class="card-body">
    <div class="dl-results-position">
      <%= search_status(@count, @start, @num_results_shown, 'item') %>
    </div>
    <div class="dl-result-controls form-inline">
      <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-sm btn-light active">
          <input type="radio" name="dl-results-style" value="less" autocomplete="off" checked> Less
        </label>
        <label class="btn btn-sm btn-light">
          <input type="radio" name="dl-results-style" value="more" autocomplete="off"> More
        </label>
      </div>
      <%= sort_menu %>
    </div>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-md-auto">
    <%= @pagination_links %>
  </div>
</div>

<%= items_as_media(@items, link_to_admin: !current_user.nil?) %>

<div class="row justify-content-md-center">
  <div class="col-md-auto">
    <%= @pagination_links %>
  </div>
</div>

<% if Rails.env.development? %>
  <%= render partial: 'shared/results_debug', locals: {
      es_request: @es_request_json,
      es_response: @es_response_json } %>
<% end %>
