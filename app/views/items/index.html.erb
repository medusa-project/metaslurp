<% provide(:body_id, 'items_index') %>
<% provide(:active_nav, 'items') %>
<% provide(:title, 'Items') %>

<%= form_tag(@permitted_params, method: :get, class: 'dl-filter') do %>
  <%= hidden_field_tag :q, params[:q] %>
  <div class="row">
    <div id="dl-facets" class="col-sm-4 col-lg-3 col-xl-2">
      <%= render partial: 'items/facets' %>
    </div>
    <div id="dl-items" class="col-sm-8 col-lg-9 col-xl-10">
      <%= render partial: 'items/items' %>
    </div>
  </div>
<% end %>
