<%
# @param element_def [ElementDef]
# @param context [Symbol] :new or :edit
%>

<!-- Add-element modal -->
<div class="modal fade" id="dl-add-element-modal" tabindex="-1" role="dialog"
     aria-labelledby="dl-add-element-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="dl-add-element-modal-label">Add Element</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render partial: 'form', locals: { element_def: element_def,
                                              context: context } %>
      </div>
    </div>
  </div>
</div>
