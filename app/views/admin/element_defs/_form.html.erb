<%
  # @param element_def [ElementDef]
  # @param context [Symbol] :new or :edit

  position_options_for_select = [['Nothing (First)', 0]]
  elements = ElementDef.order(:index)
  if element_def.id.present?
    elements = elements.where('id != ?', element_def.id)
  end
  elements.each_with_index do |e, i|
    position_options_for_select << [e.label, i + 1]
  end
%>

<%= form_for([:admin, element_def], remote: true) do |f| %>
  <div class="dl-error-messages">
    <% # populated via ajax by shared/_validation_messages.js.erb
    %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <% if context == :new %>
      <%= f.text_field :name, class: 'form-control' %>
    <% else %>
      <br>
      <%= element_def.name %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :label %>
    <%= f.text_field :label, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :index, 'Position After' %>
    <%= f.select :index, position_options_for_select,
                 { selected: element_def.index },
                 class: 'form-control' %>
  </div>

  <div class="checkbox">
    <label>
      <%= f.check_box :searchable %>
      Searchable
    </label>
  </div>

  <div class="checkbox">
    <label>
      <%= f.check_box :sortable %>
      Sortable
    </label>
  </div>

  <div class="checkbox">
    <label>
      <%= f.check_box :facetable %>
      Facetable
    </label>
  </div>

  <div class="clearfix">
    <div class="pull-right">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= f.submit(context == :new ? 'Create Element' : 'Edit Element',
                   class: 'btn btn-primary') %>
    </div>
  </div>
<% end %>
