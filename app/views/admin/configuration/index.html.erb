<% provide :title, 'Configuration' %>
<% provide :body_id, 'configuration' %>
<% provide :active_nav, 'website' %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', admin_root_path %></li>
  <li class="active">Configuration</li>
</ol>

<h1>Configuration</h1>

<%= form_tag(admin_configuration_path, method: :patch) do %>

  <h2>General</h2>

  <table class="table">
    <tr>
      <td><%= label_tag("configuration[#{Option::Keys::ORGANIZATION_NAME}]",
                        'Organization Name') %></td>
      <td>
        <%= text_field_tag("configuration[#{Option::Keys::ORGANIZATION_NAME}]",
                           Option::string(Option::Keys::ORGANIZATION_NAME),
                           class: 'form-control') %>
      </td>
    </tr>
    <tr>
      <td><%= label_tag("configuration[#{Option::Keys::ADMINISTRATOR_EMAIL}]",
                        'Administrator Email') %></td>
      <td>
        <%= text_field_tag("configuration[#{Option::Keys::ADMINISTRATOR_EMAIL}]",
                           Option::string(Option::Keys::ADMINISTRATOR_EMAIL),
                           class: 'form-control') %>
      </td>
    </tr>
    <tr>
      <td><%= label_tag("configuration[#{Option::Keys::COPYRIGHT_STATEMENT}]",
                        'Copyright Statement') %></td>
      <td>
        <%= text_field_tag("configuration[#{Option::Keys::COPYRIGHT_STATEMENT}]",
                           Option::string(Option::Keys::COPYRIGHT_STATEMENT),
                           class: 'form-control') %>
      </td>
    </tr>
  </table>

  <h2>Website</h2>

  <table class="table">
    <tr>
      <td><%= label_tag("configuration[#{Option::Keys::WEBSITE_NAME}]",
                        'Name') %></td>
      <td>
        <%= text_field_tag("configuration[#{Option::Keys::WEBSITE_NAME}]",
                           Option::string(Option::Keys::WEBSITE_NAME),
                           class: 'form-control') %>
      </td>
    </tr>
    <tr>
      <td><%= label_tag("configuration[#{Option::Keys::DEFAULT_RESULT_WINDOW}]",
                        'Results Per Page') %></td>
      <td>
        <%= number_field_tag("configuration[#{Option::Keys::DEFAULT_RESULT_WINDOW}]",
                             Option::integer(Option::Keys::DEFAULT_RESULT_WINDOW),
                             class: 'form-control') %>
      </td>
    </tr>
    <tr>
      <td><%= label_tag("configuration[#{Option::Keys::FACET_TERM_LIMIT}]",
                        'Facet Term Limit') %></td>
      <td>
        <%= number_field_tag("configuration[#{Option::Keys::FACET_TERM_LIMIT}]",
                             Option::integer(Option::Keys::FACET_TERM_LIMIT),
                             class: 'form-control') %>
      </td>
    </tr>
  </table>

  <%= submit_tag 'Save Changes', class: 'btn btn-primary' %>

<% end %>
