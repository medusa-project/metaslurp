<!-- Import-elements modal -->
<div class="modal fade" id="dl-import-modal" tabindex="-1" role="dialog"
     aria-labelledby="dl-import-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_tag(admin_elements_import_path(format: :json),
                   { multipart: true }) do %>
          <div class="modal-header">
            <h5 class="modal-title" id="dl-import-modal-label">Import Elements</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
          </div>
          <div class="modal-body">
            <%= file_field_tag('elements') %>

            <hr>

            <div class="radio">
              <label>
                <%= radio_button_tag('import_mode',
                                     Admin::ElementsController::ImportMode::MERGE, true,
                                     'aria-described-by' => 'dl-merge-help') %>
                Merge
              </label>
              <span id="dl-merge-help" class="help-block">
              Create any new elements, and update existing elements, but don't
              delete anything.
            </span>
            </div>

            <div class="radio">
              <label>
                <%= radio_button_tag('import_mode',
                                     Admin::ElementsController::ImportMode::REPLACE, false,
                                     'aria-described-by' => 'dl-only-create-help') %>
                Replace
              </label>
              <span id="dl-only-create-help" class="help-block">
              Replace the current set of elements with the ones being imported.
            </span>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Import</button>
          </div>
      <% end %>
    </div>
  </div>
</div>
