<% provide :title, 'Roles' %>
<% provide :body_id, 'roles' %>
<% provide :active_nav, 'access' %>

<%= breadcrumb({ label: 'Home', url: admin_root_path },
    { label: 'Roles' }) %>

<% if current_user.admin? %>
    <%= button_bar({ label: 'New Role',
                     icon: 'fa-plus',
                     url: new_admin_role_path }) %>
<% end %>

<h1>Roles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Role</th>
      <th>Key</th>
      <th>Users</th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= link_to role.name, admin_role_path(role) %></td>
        <td><%= role.key %></td>
        <td><%= role.users.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
