%table.table
  %thead
    %tr
      %th
      %th
      %th Field
      %th Value
      %th
        Boost (#{Boost::MIN_BOOST}â€“#{Boost::MAX_BOOST})
  %tbody
    - @boosts.each do |boost|
      %tr
        %td{style: "white-space: nowrap"}
          - if current_user.medusa_admin?
            .btn-group
              %button.btn.btn-light.btn-sm.dl-edit-boost{"data-boost-id": "#{boost.id}",
                                                         "data-target": "#dl-edit-boost-modal",
                                                         "data-toggle": "modal",
                                                         type: "button"}
                %i.fas.fa-edit
                Edit
              = link_to(admin_boost_path(boost),
                        class: 'btn btn-danger btn-sm',
                        method: :delete,
                        data: { confirm: 'Are you sure you want to delete this boost?' }) do
                %i.fas.fa-trash
                Delete
        %td
          %code= boost.field
        %td
          %code= boost.value
        %td= boost.boost
